{
  "kind": "Pod",
  "apiVersion": "v1",
 "metadata":
  {"name": "tomcat8store",
  "labels": {
      "name": "tomcat8store"
    }
 },
 "spec": {
    "volumes": [
      {
        "name": "default-token-sqgw8",
        "secret": {
          "secretName": "default-token-sqgw8",
          "defaultMode": 420
        }
      },
      {
        "name": "tomcat-storage",
        "persistentVolumeClaim": {"claimName": "tomcat-volume-claim"}
      }
    ],
    "containers": [
      {
        "name": "tomcat8",
        "image": "registry.eu-de.bluemix.net/maks_s/tomcat-8.5:3",
        "ports": [
          {
            "containerPort": 8080,
            "protocol": "TCP"
          }
        ],
        "resources": {},
        "volumeMounts": [
          {
            "name": "default-token-sqgw8",
            "readOnly": true,
            "mountPath": "/var/run/secrets/kubernetes.io/serviceaccount"
          },
       {
        "mountPath": "/var/data",
        "name": "tomcat-storage"
      }
        ],
        "terminationMessagePath": "/dev/termination-log",
        "terminationMessagePolicy": "File",
        "imagePullPolicy": "IfNotPresent"
      }
    ],
    "restartPolicy": "Always"
  }
}